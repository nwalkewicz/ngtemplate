{
  "include": [ "./src/**/*" ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2021"],
    "sourceMap": true,
    "declaration": true,
    "outDir": "../build/"
  }
}